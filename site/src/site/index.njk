        <picture class='abs z1 h__listings-sun x top right'>
          <source type='image/webp' srcSet='/images/taylor-camp.webp' />
          <img src='/images/taylor-camp.png' alt='taylor'  class='x' />
        </picture>
      </div>
      <div class='container--l mxa'>
        {%- for listing in homeListings -%}
          <div class='row ac x'>
