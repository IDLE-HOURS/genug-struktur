<div class='hero bb f jcc ais rel' data-component='hero'>
  <div class='outer p1 rel hero__inner z1'>
    <div class='container ac mxa container--l'>
      <h1 class='cg'>Architecture + Ecology</h1>
      <p class='s30 serif container--m mxa'>Enough Structures is building a new way to live and dream.</p>
      <select aria-label='Listing Select' name="navigation" id="navigationalDrop" data-component='easy' data-placeholder='Search Sustainability'>
        <option data-placeholder='true'>Search Sufficiency</option>
        {% for parent in parents %}
          <option value='{{parent.parent}}' disabled>{{parent.parent}}</option>
          {% for listing in parent.listings %}
            <option class='dropdown-filters' value='/category/{{listing.content.main.slug.current}}'>
              {{listing.content.main.name}}
            </option>
          {% endfor %}
          {% if loop.last != true %}
            <option class='hidden'></option>
          {% endif %}
        {% endfor %}
      </select>
    </div>
  </div>
</div>

<div class='split f jcb fw aist' data-component='bag'>
  <div class='x c50 ac split__text f jcc aic'>
    <div class='p15 split__text-inner mxa'>
